{
	"compilerOptions": {
		"target": "ES2015",
		"lib": ["ES2015"],
		"experimentalDecorators": true,
		"rootDir": ".",
		"module": "CommonJS",
		"allowJs": true,
		"strict": true,
		"noImplicitAny": true,
		"declaration": false,
		"outDir": "dist",
		"sourceMap": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
