{
	"name": "@polyfrost/nexus",
	"type": "module",
	"version": "0.0.0",
	"private": true,
	"packageManager": "pnpm@9.1.0",
	"description": "Monorepo containing Polyfrost's TypeScript-based infrastructure",
	"license": "AGPL-3.0-only",
	"engines": {
		"npm": "pnpm",
		"yarn": "pnpm",
		"node": ">=20"
	},
	"scripts": {
		"typecheck": "pnpm -r typecheck",
		"lint": "eslint --cache .",
		"format": "eslint --fix --cache .",
		"clean": "git clean -qfX .",
		"desktop": "pnpm --filter @polyfrost/desktop -- ",
		"website": "pnpm --filter @polyfrost/website -- ",
		"interface": "pnpm --filter @polyfrost/interface -- ",
		"assets": "pnpm --filter @polyfrost/assets -- ",
		"storybook": "pnpm --filter @polyfrost/storybook -- ",
		"doc": "pnpm --filter @polyfrost/docs -- ",
		"contrib": "pnpm --filter @polyfrost/docs-contrib -- ",
		"ui": "pnpm --filter @polyfrost/ui -- "
	},
	"devDependencies": {
		"@flowr/eslint-config": "^3.1.0",
		"@storybook/react-vite": "^8.0.10",
		"eslint": "^9.2.0",
		"eslint-plugin-astro": "^1.1.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.11"
	}
}
