{
	"name": "@polyfrost/nexus",
	"type": "module",
	"version": "0.0.0",
	"private": true,
	"packageManager": "pnpm@9.0.6",
	"engines": {
		"npm": "pnpm",
		"yarn": "pnpm",
		"node": ">=20"
	},
	"scripts": {
		"typecheck": "pnpm -r typecheck",
		"lint": "eslint --cache .",
		"format": "eslint --fix --cache .",
		"clean": "git clean -qfX .",
		"desktop": "pnpm --filter @polyfrost/desktop -- ",
		"website": "pnpm --filter @polyfrost/website -- ",
		"interface": "pnpm --filter @polyfrost/interface -- ",
		"assets": "pnpm --filter @polyfrost/assets -- ",
		"storybook": "pnpm --filter @polyfrost/storybook -- ",
		"doc": "pnpm --filter @polyfrost/docs -- ",
		"contrib": "pnpm --filter @polyfrost/docs-contrib -- ",
		"ui": "pnpm --filter @polyfrost/ui -- "
	},
	"devDependencies": {
		"@flowr/eslint-config": "^3.0.0",
		"@storybook/react-vite": "^8.0.9",
		"eslint": "^9.1.1",
		"eslint-plugin-astro": "^1.0.3",
		"eslint-plugin-format": "^0.1.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.6",
		"typescript": "^5.4.5",
		"vite": "^5.2.10"
	}
}
