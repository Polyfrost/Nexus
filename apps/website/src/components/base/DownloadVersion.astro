---
import { Icon } from 'astro-icon/components';
import type { Icon as IconType } from 'virtual:astro-icon';
import Link from './Link.astro';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<"a"> {
	name: string;
	url: string
	icon?: IconType
}

const { name, url, icon, ...props } = Astro.props;
---

<a href={url} class="flex items-center gap-1 border-1 border-gray-700 rounded-lg p-2 hover:bg-blue-600/5"  {...props} >
	<Icon name={icon??"download"} size={18}/>
	<h3 class="">{name}</h3>
</a>
