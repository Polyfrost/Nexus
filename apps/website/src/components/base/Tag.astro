---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'span'> {}

const { ...attr } = Astro.props;
---

<div
	class="flex flex-col items-center justify-center rounded-md bg-blue-500/10 px-2 py-0.5 text-xs text-blue-500 font-medium leading-none transition-colors hover:bg-blue-500/20"
>
	<span {...attr}>
		<slot />
	</span>
</div>
