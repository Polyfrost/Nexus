---
import type { HTMLAttributes } from 'astro/types';

/// To add a new logo, add an import with the path,
/// according to astro.config.ts: `~icons/<name>``
// Then add an export const so that the rest of the code can use it named.
import Logo_2 from '~icons/polyicons/logo_2';
import Logo_7 from '~icons/polyicons/logo_7';

export const OneConfigSmall = Logo_7;
export const PolyfrostFull = Logo_2;

// this needs to be disabled because eslint doesn't play well with astro injecting astroHTML
// eslint-disable-next-line no-undef
export type Icons = (props: astroHTML.JSX.SVGAttributes) => astroHTML.JSX.Element;

export interface Props extends HTMLAttributes<'svg'> {
	size?: number
	icon: Icons
}
const { size, icon } = Astro.props;
const IconRaw = icon;
---

<IconRaw width={size} height={size}>
