{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"composite": false,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@webtypes/*": ["src/types/*"],
			"@lib/*": ["src/lib/*"],
			"@public/*": ["public/*"],
			"@config": ["config.ts"],
			"@styles/*": ["src/styles/*"]
		}
	},
	"exclude": ["node_modules", "dist", ".vercel", "public"]
}
