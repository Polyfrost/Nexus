{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"composite": false,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@styles/*": ["./src/styles/*"],
			"@utils/*": ["./src/utils/*"],
			"~/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "dist", "public"]
}
