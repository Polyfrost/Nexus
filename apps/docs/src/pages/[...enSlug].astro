---
import { englishPages } from '~/content';
import { stripLangFromSlug } from '~/utils';

export async function getStaticPaths() {
	return englishPages.map((p) => {
		return {
			params: {
				enRedirectSlug: stripLangFromSlug(p.slug),
			},
			props: {
				englishSlug: p.slug,
			},
		};
	});
}
---

<meta http-equiv="refresh" content={`0;url=/${Astro.props.englishSlug}`} />
